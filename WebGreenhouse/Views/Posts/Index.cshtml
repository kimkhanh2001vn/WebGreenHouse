@model IEnumerable<Model.EF.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/assets/css/TableTheme.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">
}
@section Scripts{
    <script>
        setTimeout(function () {
            $('#messeger1').fadeOut('slow');
        }, 2000);
    </script>
}
<html>
<body>
    <div class="preloader"></div>
    <div class="bootstrap snippets bootdey" style="padding:40px">
        @{ if (ViewBag.createSuccess != null)
            { <div class="form-group" id="messeger1">
                    <div id="successSow" class="alert alert-success alert-white rounded">
                        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">X</button>
                        <div class="icon">
                            <i class="fa fa-check"></i>
                        </div>
                        <strong>Thành Công! </strong>
                        Tạo Mới Thành Công.
                    </div>
                </div>
            }
        }
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="tab-content" style="margin-bottom:15px">
                            <a href="/posts/create/@ViewBag.ID" class="btn btn-danger">Tạo Mới</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                        <th><span>Tiêu Đề Bài Đăng</span></th>
                                        <th><span>Ngày Tạo</span></th>
                                        <th class="text-center"><span>Dạng Nhà Đất</span></th>
                                        <th><span>Giá</span></th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                @*<img src="https://bootdey.com/img/Content/user_1.jpg" alt="">*@
                                                <a href="#">@item.Name</a>
                                                @*<span class="user-subhead">Member</span>*@
                                            </td>
                                            <td>@Html.FormatValue(item.CreateDate, "{0:dd/MM/yyyy}")</td>
                                            <td class="text-center">
                                                @if (item.HomeFlag == true)
                                                {
                                                    <span class="label label-success">
                                                        Đang Bán
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="label label-warning">
                                                        Đang Cho Thuê
                                                    </span>
                                                }

                                            </td>
                                            <td>
                                                <a href="#">@Html.FormatValue(item.Price, "{0:#,##0}") VNĐ</a>
                                            </td>
                                            <td style="width: 20%;">
                                                <a href="/posts/edit/@item.ID" class="table-link text-info">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                                <a href="@Url.Action("Delete","Delete",new { id = item.ID})" class="table-link danger">
                                                    <span class="fa-stack">
                                                        <i class="fa fa-square fa-stack-2x"></i>
                                                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




