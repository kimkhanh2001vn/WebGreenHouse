@using WebGreenhouse.Common
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GreenHouse - Bất Động Sản</title>
    <link rel="icon" href="~/Areas/Admin/Resources/assets/img/icons8_house_with_garden_48.png">

    @Scripts.Render("~/assets/js")
    <script src="~/assets/js/bootstrap.min.js"></script>
    @Styles.Render("~/Content/css")

    @RenderSection("Styles", required: false)
    <style>
        .giohang {
            position: relative;
        }

            .giohang:hover .sogiohang {
                background: rgb(14 170 103);
                color: white;
            }

        .sogiohang {
            color: rgb(36,36,36);
            background: rgb(255 255 255);
            border: 1px solid;
            position: absolute;
            padding: 0.5px 5px 0 5px;
            height: 20px;
            width: 20px;
            line-height: 17px;
            text-align: center;
            font-size: 13px;
            font-weight: 500;
            border-radius: 10px;
            z-index: 999;
            top: 12px;
            left: 41px;
        }
    </style>
</head>
<body>
    <div class="header header-light">
        <div class="container">
            <nav id="navigation" class="navigation navigation-landscape">
                <div class="nav-header">
                    <a class="nav-brand" href="#">
                        <img src="~/Areas/Admin/Resources/assets/img/icons8_house_with_garden_48.png" class="logo" alt="" />GreenHouse
                    </a>
                    <div class="nav-toggle"></div>
                    <div class="mobile_nav">
                        <ul>
                            <li><a href="/login/login" @*data-toggle="modal" data-target="#login"*@><i class="fas fa-user-circle fa-lg"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="nav-menus-wrapper" style="transition-property: none;">

                    @if (Session[CommonStants.username_Member] != null && Session[CommonStants.ID_Member] != null)
                    {
                    <ul class="nav-menu">
                        <li class="active">
                            <a href="/admin/Profile/ProfileUser/@Session[CommonStants.ID_Member]">Trang Chủ<span class="submenu-indicator"></span></a>
                        </li>
                        <li>
                            <a href="/usermember/index">Môi Giới<span class="submenu-indicator"></span></a>
                        </li>
                        <li>
                            <a href="#">Dự Án<span class="submenu-indicator"></span></a>
                        </li>
                    </ul>

                    <ul class="butt nav-menu nav-menu-social align-to-right">
                        <li>
                            <a href="#">Tên Tài Khoản : @Session[CommonStants.username_Member]<span class="submenu-indicator"></span></a>
                            <ul class="nav-dropdown nav-submenu">
                                <li><a href="/admin/profile/ProfileUser/@Session[CommonStants.ID_Member]">Thông Tin</a></li>
                                <li><a href="@Url.Action("Logout","Login")">Đăng Xuất</a></li>

                            </ul>
                        </li>
                        <li class="add-listing">
                            <a href="/Posts/create/@Session[CommonStants.ID_Member]" style="cursor:pointer" class="theme-cl">
                                <i class="fa fa-plus-circle mr-1"></i>Đăng Bài
                            </a>
                        </li>
                    </ul>
                    }
                    else if (Session[CommonStants.username_Customer] != null && Session[CommonStants.ID_Customer] != null)
                    {
                        @Html.Action("Headercart", "Home")
                    }
                    else
                    {
                    <ul class="nav-menu">

                        <li class="active">
                            <a href="#">Về Công Ty<span class="submenu-indicator"></span></a>
                            <ul class="nav-dropdown nav-submenu">
                                <li><a href="~/home/index">Trang Chủ</a></li>
                                <li><a href="~/home/about">Giới Thiệu</a></li>
                                <li><a href="/home/contact">Liên Hệ</a></li>
                                <li><a href="/home/FAQ">FAQ</a></li>

                            </ul>
                        </li>

                        <li>
                            <a href="/home/Rents">Tìm Thuê<span class="submenu-indicator"></span></a>
                        </li>

                        <li>
                            <a href="/Home/Sells">Tìm Mua<span class="submenu-indicator"></span></a>
                        </li>

                        <li>
                            <a href="/usermember/index">Môi Giới<span class="submenu-indicator"></span></a>
                        </li>
                        <li>
                            <a href="#">Dự Án<span class="submenu-indicator"></span></a>
                        </li>
                    </ul>

                    <ul class="butt nav-menu nav-menu-social align-to-right">
                        <li class="add-listing">
                            <a href="/login/login" style="cursor:pointer" class="theme-cl">
                                <i class="fas fa-sign-in-alt mr-1"></i>Đăng Nhập
                            </a>
                        </li>

                    </ul>
                    }
                </div>
            </nav>
        </div>
    </div>
    <div>
        @RenderBody()
        <!-- ============================ Call To Action ================================== -->
        <section class="theme-bg call_action_wrap-wrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="call_action_wrap">
                            <div class="call_action_wrap-head">
                                <h3>Bạn Có Câu Hỏi Nào Không ?</h3>
                                <span>Chúng Tôi Sẽ Giúp Đỡ Mọi Người Dựa vào Kinh Nghiệm Và Kỹ Thuật.</span>
                            </div>
                            <a href="/home/contact" class="btn btn-call_action_wrap">Liên Hệ Ngay Hôm Nay</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- ============================ Call To Action End ================================== -->
        <hr />
    </div>
    <footer class="dark-footer skin-dark-footer style-2">
        <div class="footer-middle">
            <div class="container">
                <div class="row">

                    <div class="col-lg-5 col-md-5">
                        <div class="footer_widget">
                            <img src="assets/img/logo-light.png" class="img-footer small mb-2" alt="" />
                            <h4 class="extream mb-3">Chúng Tôi Được Giúp Gì <br> Cho Bạn?</h4>
                            <p>Hãy Gửi Những Điểu Thắc Mắc Của Bạn Đến với Chúng Tôi</p>
                            <div class="foot-news-last">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Địa Chỉ Email">
                                    <div class="input-group-append">
                                        <button type="button" class="input-group-text theme-bg b-0 text-light">Theo Dõi</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-7 ml-auto">
                        <div class="row">

                            <div class="col-lg-4 col-md-4">
                                <div class="footer_widget">
                                    <h4 class="widget_title">Công Ty</h4>
                                    <ul class="footer-menu">
                                        <li><a href="/home/index">Trang Chủ</a></li>
                                        <li><a href="/home/about">Giới Thiệu</a></li>
                                        <li><a href="/home/Contact">Tư Vấn</a></li>
                                        <li><a href="/Home/FAQ">FAQ</a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-4">
                                <div class="footer_widget">
                                    <h4 class="widget_title">Tất Cả Loại Nhà</h4>
                                    <ul class="footer-menu">
                                        <li><a href="#">Villa<span class="new">New</span></a></li>
                                        <li><a href="#">Phòng Trọ</a></li>
                                        <li><a href="#">Văn Phòng<span class="new">New</span></a></li>
                                        <li><a href="#">Nhà Xưởng</a></li>
                                        <li><a href="#">Đất</a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-4">
                                <div class="footer_widget">
                                    <h4 class="widget_title">Công Ty</h4>
                                    <ul class="footer-menu">
                                        <li><a href="#">Trang chủ</a></li>
                                        <li><a href="#">Giới Thiệu</a></li>
                                        <li><a href="#">Liên Hệ</a></li>
                                        <li><a href="#">FAQ</a></li>
                                        <li><a href="#">Đăng Nhập</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12 col-md-12 text-center">
                        <p class="mb-0">© @DateTime.Now.Year GreenHouse. Thiết Kế Bởi <a href="/home/index">GreenHouse</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ============================ Footer End ================================== -->
    <a id="back2Top" class="top-scroll" title="Back to top" href="#" style="height:35px;padding-top:12px"><i class="ti-arrow-up"></i></a>
</body>
</html>

@RenderSection("Scripts", required: false)
