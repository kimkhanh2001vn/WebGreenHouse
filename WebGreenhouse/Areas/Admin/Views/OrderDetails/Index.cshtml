@model IEnumerable<Model.EF.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/assets/css/TableTheme.css" rel="stylesheet" />
<html>
<body>
    <div class="preloader"></div>
    <div class="bootstrap snippets bootdey" style="padding:40px">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>
                                        Tên khách hàng
                                    </th>
                                    <th>
                                        Tên sản phẩm
                                    </th>
                                    <th>
                                        Số lượng
                                    </th>
                                    <th>
                                        Giá
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Order.CustomerName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Post.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>
                                        <td>
                                            @Html.FormatValue(item.Price, "{0:#,##0}") VNĐ
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit", "OrderDetails", new { id = item.OrderID, postid = item.PostID })"><i class="fa fa-edit"></i></a>
                                            <a href="@Url.Action("Details","OrderDetails",new { id = item.OrderID , postid = item.PostID})"><i class="fa fa-sliders-h"></i></a>
                                            <a href="@Url.Action("Delete","OrderDetails",new { id = item.OrderID, postid = item.PostID})"><i class="fa fa-times-circle"></i></a>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
