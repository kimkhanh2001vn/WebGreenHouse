
@{
    ViewBag.Title = "User_Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var list = (List<Model.EF.User>)ViewBag.user;
}

<body class="yellow-skin">
    <div class="preloader"></div>
    <div id="main-wrapper">

        <div class="clearfix"></div>
        <div class="page-title" style="background:#f4f4f4 url(assets/img/slider-5.jpg);" data-overlay="5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12">

                        <div class="breadcrumbs-wrap">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item active" aria-current="page">Hồ Sơ Của Tôi</li>
                            </ol>
                            <h2 class="breadcrumb-title">Tài Khoản & Thông Tin</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================ Page Title End ================================== -->
        <!-- ============================ User Dashboard ================================== -->
        <section class="gray pt-5 pb-5">
            <div class="container-fluid">

                <div class="row">
                    @foreach (var user in list)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-12">
                            <div class="property_dashboard_navbar">

                                <div class="dash_user_avater">
                                    <img src="~/assets/img/user-3.jpg" class="img-fluid avater" alt="">
                                    <h4>@user.Name</h4>
                                    Công Việc : <span>@user.MyWork</span>
                                </div>

                                <div class="dash_user_menues">
                                    <ul>
                                        <li><a href="/"><i class="fa fa-tachometer-alt"></i>Thông Tin Chí Tiết<span class="notti_coun style-1">4</span></a></li>
                                        <li class="active"><a href="/home/profile"><i class="fa fa-user-tie"></i>Thông Tin</a></li>
                                        <li><a href="/admin/profile/ordercustomer/@user.ID"><i class="fa fa-bookmark"></i>Đơn Hàng<span class="notti_coun style-2">7</span></a></li>
                                        <li><a href="/posts/index/@user.ID"><i class="fa fa-tasks"></i>Bài Đăng Của Tôi</a></li>
                                        <li><a href="messages.html"><i class="fa fa-envelope"></i>Tin Nhắn<span class="notti_coun style-3">3</span></a></li>
                                        @*<li><a href="submit-property-dashboard.html"><i class="fa fa-pen-nib"></i>Submit New Property</a></li>*@
                                        <li><a href="change-password.html"><i class="fa fa-unlock-alt"></i>Thay Đổi Mật Khẩu</a></li>
                                    </ul>
                                </div>

                                <div class="dash_user_footer">
                                    <ul>
                                        <li><a href="/home/logout"><i class="fa fa-power-off"></i></a></li>
                                        <li><a href="#"><i class="fa fa-comment"></i></a></li>
                                        <li><a href="#"><i class="fa fa-cog"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-9 col-md-8 col-sm-12">
                            <div class="dashboard-body">

                                <div class="dashboard-wraper">

                                    <!-- Basic Information -->
                                    <div class="frm_submit_block">
                                        <h4>Thông Tin Của Tôi</h4>
                                        <div class="frm_submit_wrap">
                                            <div class="form-row">

                                                <div class="form-group col-md-6">
                                                    <label>Họ Và Tên</label>
                                                    <input type="text" class="form-control" value="@user.Name">
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label>Email</label>
                                                    <input type="email" class="form-control" value="@user.Email">
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label>Số Điện Thoại</label>
                                                    <input type="text" class="form-control" value="@user.NumberPhone">
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label>Địa Chỉ</label>
                                                    <input type="text" class="form-control" value="@user.Address">
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label>Công Việc</label>
                                                    <input type="text" class="form-control" value="@user.MyWork">
                                                </div>

                                                <div class="form-group col-md-12">
                                                    <label>Mô Tả Bản Thân</label>
                                                    <textarea class="form-control">
                                                        @user.Description
                                                    </textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="frm_submit_block">
                                        <h4>Tài Khoản Liên Kết</h4>
                                        <div class="frm_submit_wrap">
                                            <div class="form-row">

                                                <div class="form-group col-md-6">
                                                    <label>Facebook</label>
                                                    <input type="text" class="form-control" value="https://facebook.com/">
                                                </div>

                                                <div class="form-group col-md-6">
                                                    <label>Gmail</label>
                                                    <input type="email" class="form-control" value="https://twitter.com/">
                                                </div>

                                                <div class="form-group col-lg-12 col-md-12 mt-4">
                                                    <button class="btn btn-theme btn-lg" type="submit">Lưu Thông Tin</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- ============================ User Dashboard End ================================== -->
    </div>
</body>

