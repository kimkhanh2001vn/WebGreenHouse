@model IEnumerable<Model.EF.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/css/TableTheme.css" rel="stylesheet" />
<style>
    .font-with p {
        width: 275px;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }
</style>
<html>
<body>
    <div class="preloader"></div>
    <div class="bootstrap snippets bootdey" style="padding:40px">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="label" style="margin-bottom:15px">
                            <a href="~/Admin/Users/create" class="btn btn-danger">Tạo Mới</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Images)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NumberPhone)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nation)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MyWork)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CreateDate)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Images)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NumberPhone)
                                        </td>
                                        <td class="font-with">
                                            <p>@Html.DisplayFor(modelItem => item.Address)</p>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MyWork)
                                        </td>
                                        <td>
                                            @if (item.Status == true)
                                            {
                                                <p class="label label-success">Đang hoạt động</p>
                                            }
                                            else
                                            {
                                                <p class="label label-danger">Ngừng hoạt động</p>
                                            }
                                        </td>
                                        <td>
                                            @Html.FormatValue(item.CreateDate, "{0:dd/MM/yyyy}")
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit","Users",new { id = item.ID})"><i class="fa fa-edit"></i></a>
                                            <a href="@Url.Action("Details","Users",new { id = item.ID})"><i class="fa fa-sliders-h"></i></a>
                                            <a href="@Url.Action("Delete","Users",new { id = item.ID})"><i class="fa fa-times-circle"></i></a>
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>